<%= form_with(model: to_do) do |form| %>
  <% if to_do.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(to_do.errors.count, "error") %> prohibited this to_do from being saved:</h2>

      <ul>
        <% to_do.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div class = "input-group mb-3">
    <span class="input-group-text">CATEGORIES</span>
    <%= form.select :category_id, options_for_select(@select_options, :selected=>to_do.category_id), {}, {:class => 'form-control'}%>
  </div>

  <div>
    <%= form.label :completed, style: "display: block" %>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.check_box :priority %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
