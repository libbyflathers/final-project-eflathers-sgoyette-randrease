<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_with(model: to_do) do |form| %>

        <% if to_do.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">
              <%= pluralize(to_do.errors.count, "error") %> prohibited this to-do from being saved:
            </h4>
            <ul>
              <% to_do.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">TITLE</span>
                <%= form.text_field :title, class: "form-control" %>
            </div>
          </div>

            <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text">CATEGORIES</span>
              <%= form.select :category_id, options_for_select(@select_options, selected: to_do.category_id), {}, class: 'form-select' %>
            </div>
          </div>

          <div class="form-check mb-3">
            <%= form.check_box :completed, class: "form-check-input" %>
            <%= form.label :completed, class: "form-check-label" %>
          </div>

          <div class="form-check mb-3">
            <%= form.check_box :priority, class: "form-check-input" %>
            <%= form.label :priority, class: "form-check-label" %>
          </div>

          <div>
            <%= form.submit "Save", class: "btn btn-primary" %>
          </div>
        <% end %>


    </div>
  </div>
</div>