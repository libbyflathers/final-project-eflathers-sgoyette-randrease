
<div class="d-flex justify-content-end  align-items-center gap-2 mt-4 mb-3">
  <% if logged_in? %>
    <a href="<%= edit_to_do_path(@to_do) %>" class="btn btn-secondary"><i class="bi bi-pencil-square"></i> Edit To Do</a>
    <%= button_to "Destroy this to do", @to_do, method: :delete, class: "btn btn-danger", form: { class: "d-inline" } %>
   <% end %>

  <%= link_to "Back to to dos", to_dos_path, class: "btn btn-info" %>
</div>

<%= render @to_do %>
</div>