<% content_for :title, "Categories" %>

<h1 class="mb-4">Categories</h1>

<div class="mt-4">
  <%= link_to "New Category", new_category_path, class: "btn new-button" %>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4" id="categories">
  <% @categories.each do |category| %>
    <div class="col">
      <%= link_to category_path(category), class: "text-decoration-none text-dark" do %>
        <div class="card shadow-sm h-100 hover-shadow">
          <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 150px;">
            <h5 class="card-title text-center m-0"><%= category.name %></h5>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

