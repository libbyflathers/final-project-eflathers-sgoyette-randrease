<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center border-bottom py-2">
  <h1 class="mb-0"><%= @category.name %></h1>
  <div>
      <% if logged_in? %>
        <a href="<%= edit_category_path(@category) %>" class="btn btn-secondary"><i class="bi bi-pencil-square"></i> Edit Category</a>
        <%= button_to "Destroy this Category", @category, method: :delete, class: "btn btn-danger", form: { class: "d-inline" } %>
        <% end %>
        <%= link_to "Back to categories", categories_path, class: "btn btn-info" %>
      </div>
  </div>
</div>

  <% @category.to_dos.each do |to_do| %>
    <%= render partial: "to_dos/to_do", locals: { to_do: to_do } %>
  <% end %>
